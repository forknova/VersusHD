.page-width--narrow {
  max-width: 1200px;
  padding: 0 15px;
  margin: 0 auto;
}

.ssw-instagram-feed-wrap.page-width {
  max-width: var(--page-width);
}

.gw-container .social-heading {
	display: block;
  	width: 100%;
	text-align: left;
    padding-left: 16.5px;
    font-size: 28px;
  	margin-bottom: 6px;
}
.gw-container .social-links {
	display: block;
  	width: 100%;
	text-align: left;
    padding-left: 16.5px;
	font-size: 20px;
}

@media (min-width: 750px) {
	.gw-container .social-heading,
	.gw-container .social-links {
		padding-left: 55px;
    }
}

.ssw-instagram-listing .ssw-instagram-media {
  padding: 0;
}
.ssw-instagram-listing .ssw-instagram-item .ssw-item-backdrop {
  left: 4px;
  top: 4px;
  right: 4px;
  bottom: 4px;
}


button.ssw-icon-left-open-big.ssw-carousel-prev-icon,
button.ssw-icon-right-open-big.ssw-carousel-next-icon {
	background-color: #ffffff94;
  padding: 0;
}

.ssw-icon-left-open-big:before,
.ssw-icon-right-open-big:before {
  	color: black;
    font-size: 16px;
  	width: 5px;
}
.ssw-icon-left-open-big:before {
	width: 8px;
}

.ssw-instagram-detail-product-link {
  display: block;
  text-align: center;
}

.ssw-instagram-detail-product-add-to-cart {

}

@media (min-width: 600px) {
  .ssw-instagram-detail-product {
    position: relative;
    text-align: center;
  }
  
  .ssw-instagram-detail-product-add-to-cart {
      position: absolute;
      right: 0;
      top: 0;
  }
}

.ssw-instagram-load-more a {
  color: #000;
}
